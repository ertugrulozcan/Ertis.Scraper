					"description": "Product Price",
					"type": "double",
					"route": [
						"body",
						"#container",
						"div[data-fragment-name=ProductDetail]",
						"#product-detail-app",
						".product-detail-container",
						".flex-container",
						".product-container",
						".container-right-content",
						".pr-in-w",
						"div",
						".pr-in-cn",
						".product-price-container",
						".pr-bx-w",
						".pr-bx-dsc",
						".pr-bx-pr-dsc",
						"div:nth-child(2)",
						".prc-dsc"
					],
					"options": {
						"format": {
							"culture": "tr-TR",
							"trimEnd": "TL"
