{
	"Logging": {
		"LogLevel": {
			"Default": "Debug",
			"System": "Information",
			"Microsoft": "Information"
		}
	},
	"Targets": [
		{
			"name": "crawler-1",
			"description": "Sample Crawler 1",
			"domain": "www.foobar.com",
			"schema": {
				"id": {
					"description": "Product ID",
					"type": "string",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						"[itemprop='sku']"
					],
					"attribute": "content"
				},
				"title": {
					"description": "Product Title",
					"type": "string",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						".detail-main",
						".container .contain-lg-4 .contain-md-4 .contain-sm-1 .fluid",
						".productDetailContent",
						".productDetailRight",
						".product-information",
						".title-wrapper",
						".product-name"
					],
					"options": {
						"format": {
							"trimStart": "",
							"trimEnd": ""
						}
					}
				},
				"originalPrice": {
					"description": "Original Price",
					"type": "double",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						".detail-main",
						".container .contain-lg-4 .contain-md-4 .contain-sm-1 .fluid",
						".productDetailContent",
						".productDetailRight",
						".product-information",
						".product-price-wrapper",
						".product-price-and-ratings",
						".price-wrapper",
						".product-price",
						"#originalPrice"
					],
					"options": {
						"format": {
							"culture": "tr-TR",
							"trimEnd": "TL"
						}
					}
				},
				"offeringPrice": {
					"description": "Discounted Price",
					"type": "double",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						".detail-main",
						".container .contain-lg-4 .contain-md-4 .contain-sm-1 .fluid",
						".productDetailContent",
						".productDetailRight",
						".product-information",
						".product-price-wrapper",
						".product-price-and-ratings",
						".price-wrapper",
						".product-price",
						"#offering-price"
					],
					"options": {
						"format": {
							"culture": "tr-TR",
							"trimEnd": "TL"
						}
					}
				},
				"price": {
					"description": "Product Price",
					"type": "double",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						".detail-main",
						".container .contain-lg-4 .contain-md-4 .contain-sm-1 .fluid",
						".productDetailContent",
						".productDetailRight",
						".product-information",
						".product-price-wrapper",
						".product-price-and-ratings",
						".price-wrapper",
						".product-price",
						"span.price"
					],
					"attribute": "content"
				},
				"currency": {
					"description": "Price Currency",
					"type": "string",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						".detail-main",
						".container .contain-lg-4 .contain-md-4 .contain-sm-1 .fluid",
						".productDetailContent",
						".productDetailRight",
						".product-information",
						".product-price-wrapper",
						".product-price-and-ratings",
						".price-wrapper",
						".product-price",
						"span.price",
						"span:nth-child(3)"
					],
					"attribute": "content"
				},
				"image_urls": {
					"description": "Product Images",
					"type": "array",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						".detail-main",
						".container .contain-lg-4 .contain-md-4 .contain-sm-1 .fluid",
						".productDetailContent",
						".product-carousel",
						".carousel-wrapper",
						"#productDetailsCarousel",
						".owl-stage-outer",
						".owl-stage"
					],
					"enumerator": {
						"description": "Product Carousel Image",
						"type": "string",
						"item-container": ".owl-item",
						"route": [
							"a",
							"picture"
						],
						"attribute": "data-cloudzoom",
						"options": {
							"format": {
								"trimStart": "zoomImage: '",
								"trimEnd": "'"
							}
						}
					}
				},
				"images": {
					"description": "Product Images",
					"type": "array",
					"route": [
						"body",
						".wrapper",
						".content-wrapper",
						".product-detail-module",
						".detail-main",
						".container .contain-lg-4 .contain-md-4 .contain-sm-1 .fluid",
						".productDetailContent",
						".product-carousel",
						".carousel-wrapper",
						"#productDetailsCarousel",
						".owl-stage-outer",
						".owl-stage"
					],
					"enumerator": {
						"description": "Product Carousel Image",
						"type": "object",
						"item-container": ".owl-item",
						"schema": {
							"url": {
								"type": "string",
								"route": [
									"a",
									"picture"
								],
								"attribute": "data-cloudzoom",
								"options": {
									"format": {
										"trimStart": "zoomImage: '",
										"trimEnd": "'"
									}
								}
							},
							"width": {
								"type": "int",
								"route": [
									"a",
									"picture",
									"img"
								],
								"attribute": "width"
							},
							"height": {
								"type": "int",
								"route": [
									"a",
									"picture",
									"img"
								],
								"attribute": "height"
							}
						}
					}
				}
			},
			"options": {
				"waitfor": {
					"selector": "body"
				}
			}
		},
		{
			"name": "crawler-2",
			"description": "Sample Crawler 2",
