					}
				},
				"price_xpath": {
					"description": "Product Price (XPath Selector Test)",
					"type": "double",
					"route": [
						"/html/body/div[1]/div[5]/main/div/div[2]/div[1]/div[2]/div[1]/div[1]/div/div[4]/div/div/div[3]/div[2]/span"
					],
					"options": {
						"format": {
							"culture": "tr-TR",
							"trimEnd": "TL"
						}
					}
				}
			}
		}
	]
}